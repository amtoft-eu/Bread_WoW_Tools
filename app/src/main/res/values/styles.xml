<resources>
    <!-- Base application theme. -->
    <style name="AllianceTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/allianceBlue</item>
        <item name="colorPrimaryDark">@color/allianceUnfocus</item>
        <item name="colorAccent">@color/allianceFocus</item>
        <item name="colorMain">@color/allianceBlue</item>
        <item name="colorFocused">@color/allianceFocus</item>
        <item name="colorUnfocused">@color/allianceUnfocus</item>
        <item name="colorMainTP">@color/allianceBlueTP</item>
        <item name="fontFamily">@font/grenze_family</item>
    </style>

    <style name="HordeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hordeRed</item>
        <item name="colorPrimaryDark">@color/hordeUnfocus</item>
        <item name="colorAccent">@color/hordeFocus</item>
        <item name="colorMain">@color/hordeRed</item>
        <item name="colorFocused">@color/hordeFocus</item>
        <item name="colorUnfocused">@color/hordeUnfocus</item>
        <item name="colorMainTP">@color/hordeRedTP</item>
        <item name="fontFamily">@font/grenze_family</item>
    </style>

    <style name="ElementTheme" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/gold</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/gold2</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/gold</item>

        <item name="colorSwitchThumbNormal">@color/gold</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

    </style>

</resources>